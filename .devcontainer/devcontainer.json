{
  "name": "React Vite Dev Container",
  "dockerComposeFile": ".devcontainer/docker-compose.yml",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "lts"
    }
  },
  "forwardPorts": [3000, 3001],
  "onCreateCommand": "cp .env.example .env && pip install --no-cache-dir -r requirements.txt && npm install",
  "postCreateCommand": "python docs/assets/greeting.py both > /workspaces/.codespaces/shared/first-run-notice.txt",
  "remoteUser": "vscode"
}
  